{
    "name": "geum",
    "version": "1.0.0",
    "description": "A starter theme for WordPress.",
    "private": true,
    "author": "Jerome Toole",
    "license": "MIT",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "setup": "npm install && composer install && npm run build",
        "site-setup": "bash dev-scripts/site-setup.sh",
        "deploy": "npm install && composer install --no-dev && npm run build && npm run pot",
        "pot": "node dev-scripts/generate-pot.js",
        "scaffold": "node dev-scripts/scaffold-component.js",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "fix": "npm run lint:fix && npm run fix:php",
        "fix:php": "./vendor/bin/pint"
    },
    "type": "module",
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.0.0"
    },
    "workspaces": [
        "components/*"
    ],
    "devDependencies": {
        "@babel/core": "^7.17.9",
        "@babel/preset-env": "^7.11.5",
        "@biomejs/biome": "2.3.11",
        "@tailwindcss/postcss": "^4.1.18",
        "@vitejs/plugin-legacy": "^7.2.1",
        "autoprefixer": "^10.4.23",
        "babel-loader": "^8.1.0",
        "browser-sync": "^2.26.14",
        "clean-webpack-plugin": "^4.0.0",
        "core-js": "^3.6.5",
        "cross-env": "^7.0.3",
        "cssnano": "^6.0.1",
        "del": "^6.0.0",
        "directory-tree": "^3.0.0",
        "fast-glob": "^3.3.3",
        "glob": "^8.0.1",
        "import-glob": "^1.5.0",
        "import-glob-loader": "^1.1.0",
        "laravel-mix": "^6.0.49",
        "laravel-vite-plugin": "^2.0.1",
        "mix-env-file": "^0.1.1",
        "postcss": "^8.5.6",
        "postcss-comment": "^2.0.0",
        "postcss-functions": "^4.0.2",
        "postcss-import": "^16.1.1",
        "postcss-import-ext-glob": "^2.1.1",
        "postcss-lightningcss": "1.0.2",
        "postcss-nested-ancestors": "^3.0.0",
        "postcss-scss": "^4.0.5",
        "postcss-simple-vars": "^7.0.1",
        "postcss-url": "^10.1.3",
        "sass": "^1.50.0",
        "sass-glob-importer": "^1.0.1",
        "sass-loader": "^13.0.0",
        "sass-mq": "^6.0.0",
        "stylelint": "^14.6.1",
        "stylelint-config-idiomatic-order": "^9.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-scss": "^4.2.0",
        "tailwindcss": "^4.1.18",
        "vinyl-named-with-path": "^1.0.0",
        "vite": "^7.3.0",
        "vite-plugin-static-copy": "^3.1.4",
        "webpack": "^5",
        "webpack-stream": "^7.0.0",
        "wp-pot": "^2.0.0"
    },
    "dependencies": {
        "lodash.debounce": "^4.0.8",
        "normalize.css": "^8.0.1"
    }
}
