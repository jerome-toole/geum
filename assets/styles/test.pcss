/**
 * Test file for PostCSS functions and mixins
 * This file verifies that all ported SCSS functions and mixins work correctly
 */

/* Test color system - colors should be auto-generated by postcss-color-system plugin */

/* Test functions */
.test-functions {
	/* Test rem() function */
	font-size: rem(16px); /* Should output 1rem */
	margin: rem(32px); /* Should output 2rem */
	padding: rem(24px, 16); /* Should output 1.5rem */

	/* Test em() function */
	width: em(16px); /* Should output 1em */
	height: em(32px, 16); /* Should output 2em */

	/* Test ru() - responsive unit */
	line-height: ru(16, 24); /* Should output calc() expression */
	letter-spacing: ru(1, 2, 1em); /* Should output calc() with 1em unit */

	/* Test rfs() - responsive font-size */
	font-size: rfs(14, 18); /* Should output calc() expression */
}

/* Test strip-unit function (used internally by other functions) */
.test-strip-unit {
	--test-value: strip-unit(16px); /* Should output 16 */
}

.block2 {
	margin-top: space(4);
	padding-top: spaceFluid(12);
	padding-bottom: spaceFluid(12, 24);
}

.test-nesting {
	background: lightgray;

	&:hover {
		background: darkgray;
	}

	&.active {
		color: red;
	}

	&:where(.test-nesting--modifier) {
		color: green;

		&:where(.test-nesting--modifier--sub-modifier) {
			font-style: italic;
		}
	}

	& .nested-child {
		color: blue;

		& .deeply-nested {
			font-weight: bold;
		}
	}
}

/* Test interact mixin */
.test-interact {
	color: blue;

	@media (hover: hover) {
		&:hover {
			color: red;
			text-decoration: underline;
		}
	}
	@media (hover: none) {
		&:active {
			color: red;
			text-decoration: underline;
		}
	}
}

/* Test button-reset utility */
.test-button-reset {
	@apply button-reset;
	background: lightblue;
}

/* Test btn--unstyled utility */
.test-btn-unstyled {
	@apply btn--unstyled;
}

/* Test list-reset mixin */
.test-list-reset {
	@apply list-reset;
}

/* Test list-reset-hard mixin */
.test-list-reset-hard {
	@apply list-reset-hard;
}

/* Test mask-icon mixin */
.test-mask-icon-after {
	@apply mask-icon;
}

.test-mask-icon-before-absolute {
	position: relative;
	@apply mask-icon;
}

/* Test that custom properties are available */
.test-custom-properties {
	/* Color custom properties */
	color: var(--color-brand-1);
	background: var(--color-background);
	border-color: hsl(var(--color-brand-1--hsl));

	/* Spacing custom properties */
	margin: space(16);
	padding: spaceFluid(16, 24);

	/* Typography custom properties */
	font-family: var(--type--1--font-family);
	line-height: var(--type--1--line-height);

	/* Other custom properties */
	border-radius: var(--border-radius--m);
	transition: all var(--transition--duration) var(--transition--ease);
	box-shadow: var(--box-shadow--1);
}

/* Test grid custom properties */
.test-grid {
	display: grid;
	grid-template-columns: repeat(var(--grid--columns), 1fr);
	gap: var(--grid--column-gap);
}

