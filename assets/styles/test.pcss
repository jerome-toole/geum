/* Test breakpoints using direct media queries (Tailwind v4 approach) */
@media (min-width: 768px) {
	/* medium breakpoint */
	.test-breakpoint {
		font-size: 2rem;
	}
}

/* Test easing curves */
.test-easing {
	transition: all 300ms cubic-bezier(0.165, 0.84, 0.44, 1); /* out-quart */
}
