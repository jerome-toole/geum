@utility btn--small {
    --btn--padding-y: var(--btn--small--padding-y);
    --btn--padding-x: var(--btn--small--padding-x);
}

@utility btn--label {
    @apply btn--small;
    @apply type-small;
}

// Used for square buttons containing a single number or icon
@utility btn--square {
    min-width: var(--btn--size, rem(44));
    min-height: var(--btn--size, rem(44));
    padding: 0 0.3em;
    border-radius: var(--border-radius--s);
}

@utility btn--arrow {
    --btn--icon-size: 0.9em;


    @media (hover: hover) {
        &:hover {
            &::after {
                transform: translateX(15%);
            }
        }
    }
    @media (hover: none) {
        &:active {
            &::after {
                transform: translateX(15%);
            }
        }
    }

    &::after {
        @apply mask-icon;

        mask-image: url('/images/icons/chevron-right.svg');
        transform: translateX(0);
        transition: transition(transform);
        width: var(--btn--icon-size, 1em);
        height: var(--btn--icon-size, 1em);
    }
}

@utility btn--icon {
  position: relative;
  overflow: hidden;
  text-indent: -9999px;

  &::after {
    @apply mask-icon;
    position: absolute;
  }
}

@utility btn--icon-before {
  position: relative;
  overflow: hidden;
  text-indent: -9999px;

  &::before {
    @apply mask-icon;

    position: absolute;
  }
}

@utility btn--unstyled {
	padding: 0;
	border: 0;
	border-radius: 0;
	background-color: transparent;
	color: inherit;
	cursor: pointer;
	font-family: inherit;
	font-size: inherit;
	font-weight: inherit;
	letter-spacing: inherit;
	line-height: inherit;
	text-transform: inherit;

	@media (hover: hover) {
		&:hover {
			background-color: transparent;
			color: inherit;
		}
	}
	@media (hover: none) {
		&:active {
			background-color: transparent;
			color: inherit;
		}
	}

	&:focus {
		box-shadow: unset;
		outline-width: 5px;
	}
}
